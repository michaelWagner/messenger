<div class="modal fade" id="comment-modal" tabindex="-1" role="dialog" aria-labelledby="commentModal" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="comment-modal-title"><%= "#{action_name} comment" %></h4>
      </div>
      <div class="modal-body">
        <div class="well bs-component">
          <%= bootstrap_form_for([post, comment], html: { class: 'form-horizontal' }) do |f| %>
            <div class="field">
              <%= f.text_field :title %>
            </div>
            <div class="field">
              <%= f.text_area :body, required: true %>
            </div>
            <div class="actions">
              <%= f.submit "#{cta}", class: "btn btn-success"%>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
